generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id             Int          @id @default(autoincrement())
  account        Account      @relation(fields: [accountCode], references: [code])
  accountCode    Int          @db.SmallInt
  amount         Int
  verification   Verification @relation(fields: [verificationId], references: [id])
  verificationId Int
}

model Account {
  code        Int           @id @db.SmallInt
  description String
  Transaction Transaction[]
}

model Document {
  id             Int          @id @default(autoincrement())
  extension      String
  hash           String       @unique
  data           Bytes        @db.ByteA
  verification   Verification @relation(fields: [verificationId], references: [id])
  verificationId Int
}

model Verification {
  id           Int           @id @default(autoincrement())
  date         DateTime
  description  String
  createdAt    DateTime      @default(now())
  deletedAt    DateTime?
  transactions Transaction[]
  documents    Document[]
  // receipts, which are separate, need this to be correctly imported. To be removed
  oldId        Int?
}

model BankTransaction {
  id          Int      @id @default(autoincrement())
  externalId  String
  date        DateTime
  amount      Int
  balance     Int
  description String

  // Two transactions can actually have the same "externalId" + "date"
  // example of when it happens: two transfers on the same day to the tax account
  @@unique([externalId, date, balance])
}
